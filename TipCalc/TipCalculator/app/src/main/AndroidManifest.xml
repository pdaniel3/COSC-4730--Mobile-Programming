<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pdaniel3.tipcalculator" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Tip_Calculator"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pdaniel3.tipcalculator.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.example.pdaniel3.tipcalculator.Tip_Calculator" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pdaniel3.tipcalculator.Tip_Calculator" />
        </activity>
    </application>

</manifest>
